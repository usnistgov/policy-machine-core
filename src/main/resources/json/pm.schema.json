{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/usnistgov/policy-machine-core/master/src/main/resources/json/pm.schema.json",
    "title": "Policy Machine JSON Schema",
    "type": "object",
    "properties": {
        "resourceAccessRights": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "graph": {
            "type": "object",
            "properties": {
                "pcs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/pcNode"
                    }
                },
                "uas": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/uaNode"
                    }
                },
                "oas": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/otherNode"
                    }
                },
                "users": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/otherNode"
                    }
                },
                "objects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/otherNode"
                    }
                }
            },
            "additionalProperties": false
        },
        "prohibitions": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/prohibition"
            }
        },
        "obligations": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/obligation"
            }
        },
        "operations": {
            "type": "object",
            "properties": {
                "admin": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "resource": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "routine": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "query": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "basic": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "$defs": {
        "property": {
            "type": "object",
            "properties": {
                "key": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "pcNode": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "properties": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/property"
                    }
                }
            },
            "required": [
                "id",
                "name"
            ],
            "additionalProperties": false
        },
        "uaNode": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "assignments": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "integer"
                    }
                },
                "associations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "target": {
                                "type": "integer"
                            },
                            "arset": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "properties": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/property"
                    }
                }
            },
            "required": [
                "id",
                "name",
                "assignments"
            ],
            "additionalProperties": false
        },
        "otherNode": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "assignments": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "integer"
                    }
                },
                "properties": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/property"
                    }
                }
            },
            "required": [
                "id",
                "name",
                "assignments"
            ],
            "additionalProperties": false
        },
        "obligation": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "author": {
                    "type": "integer"
                },
                "pml": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "author",
                "pml"
            ],
            "additionalProperties": false
        },
        "containerSpec": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "complement": {
                    "type": "boolean"
                }
            },
            "required": [
                "id",
                "complement"
            ],
            "additionalProperties": false
        },
        "prohibition": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "subject": {
                    "oneOf": [
                        {
                            "type": "object",
                            "properties": {
                                "node": {
                                    "type": "integer"
                                }
                            },
                            "required": ["node"],
                            "additionalProperties": false
                        },
                        {
                            "type": "object",
                            "properties": {
                                "process": {
                                    "type": "string"
                                }
                            },
                            "required": ["process"],
                            "additionalProperties": false
                        }
                    ]
                },
                "containers": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/$defs/containerSpec"
                    }
                },
                "arset": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "intersection": {
                    "type": "boolean",
                    "default": true
                }
            },
            "required": [
                "name",
                "subject",
                "containers",
                "arset"
            ],
            "additionalProperties": false
        }
    }
}